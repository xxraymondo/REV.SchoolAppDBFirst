@model IEnumerable<SchoolAppDBFirst.Models.Student>

@{
    ViewData["Title"] = "ViewAllStudents";
}

<h1>ViewAllStudents</h1>

<p>
    <a asp-action="CreateStudent">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolId)
            </td>
            <td>
                @Html.ActionLink("Update", "UpdateStudent", new { id=item.Id }) |
                @Html.ActionLink("Details", "StudentDetails", new { id=item.Id  }) |
                @Html.ActionLink("Delete", "DeleteStudent", new {  studentId=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
